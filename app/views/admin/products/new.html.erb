<h2> New Product </h2>

<%= simple_form_for [:admin, @product] do |f| %>

  <div class="group">
    <%= f.input :title %>
  </div>

   <div class="group">
      <%= f.association :groups %>
    </div>

  <div class="group">
    <%= f.association :category %>
  </div>

  <div class="group">
    <%= f.input :description %>
  </div>

  <div class="group">
    <%= f.input :quantity %>
  </div>

  <div class="group">
    <%= f.input :price %>
  </div>

  <div class="group">
    <%= f.input :image, as: :file %>
  </div>

  <%= f.submit "Create Product", data: { disable_with: "create..." } %>

<% end %>


<script >
$("#product_category_id").select2();
$("#product_group_ids").select2();

</script>
