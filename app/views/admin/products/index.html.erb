<h1>Product List</h1>
<div class="col-md-12">
  <div class="product">
    <%= link_to("Add new product", new_admin_product_path, class: "btn btn-default pull-right") %>
  </div>

    <table class="table table-bordered">
    <thead>
      <tr>
        <td>#</td>
        <td>品名</td>
        <td>叙述</td>
        <td>库存</td>
        <td>价格</td>
        <td>选项</td>
        <td>创建日期</td>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td>#</td>
          <td><%= link_to(product.title, admin_product_path(product)) %></td>
          <td><%= product.description %></td>
          <td><%= product.quantity %></td>
          <td><%= product.price %></td>
          <td>
              <%= link_to("Edit", edit_admin_product_path(product))%>
              |
              <%= link_to("Delete", admin_product_path(product), method: :delete, data: { confirm: "Are you sure?" } )%>
          </td>
          <td><%= product.created_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
